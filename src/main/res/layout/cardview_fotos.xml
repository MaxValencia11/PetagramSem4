<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvFotos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/CVMarginTop"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/CVMarginHor">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFotosFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_gundam_foreground"
            android:scaleType="centerCrop"
            android:layout_marginVertical="30dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="@dimen/CVLinearPadVer"
            android:paddingHorizontal="@dimen/CVLinearPadHor"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFotosRat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="@string/CVRating"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_bone2"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>